                <h4 class="text-left"> Quantity : {{ this.Quantity }}</h3>

                 <div class="price pull-left"> Prescription : {{ this.prescription }}</div>
                 <br><br>
                <div class="clearfix">

                    <div class="price pull-left">Rs. {{ this.price }}</div><br>
                    


